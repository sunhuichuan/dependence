<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/gray_color_ababab"/>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="@color/gray_color_ababab"/>
            <!-- 圆角 -->
            <corners
                android:radius="5dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/WHITE"/>
            <stroke
                android:width="1dp"
                android:color="@color/gray_color_ababab"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
</selector>