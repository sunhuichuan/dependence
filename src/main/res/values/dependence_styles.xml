<?xml version="1.0" encoding="utf-8"?>
<resources>



    <!-- 分享dialog 显示消失 动画-->
    <style name="share_pop_window_anim_style">
        <item name="android:windowEnterAnimation">@anim/activity_up_in</item>
        <item name="android:windowExitAnimation">@anim/activity_up_out</item>
    </style>
    <style name="quick_option_dialog" parent="Theme.AppCompat.Dialog">
        <!-- android:windowBackground必须设定，要不然dialog无法充满屏幕！！！-->
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowAnimationStyle">@style/share_pop_window_anim_style</item>
    </style>




    <!-- 普通页面条目style-->
    <style name="ItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/item_bg_color</item>
        <item name="android:paddingLeft">15dp</item>
    </style>



    <!--单选的自定义sheet底部菜单dialog-->
    <style name="ChoiceDialogTheme" parent="@android:style/Theme.Dialog">
        <!-- 边框 //TODO 定义重复-->
        <item name="android:windowFrame">@null</item>
        <!-- //TODO 定义重复-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item> <!-- 是否启用标题栏 -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@color/TRANSPARENT</item>
        <item name="android:backgroundDimEnabled">true</item> <!-- 是否使用背景半透明 -->
    </style>

    <style name="LoadingDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- 这里设置背景为透明，为了隐藏边框 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--页面背景不变暗-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
