<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/forward_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#fbedeceb"
              android:clickable="true"
              android:orientation="vertical">
    <!--title说明文字-->
    <LinearLayout
        android:id="@+id/ll_titleContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_titleText"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="title说明文字"
            android:textColor="#545454"
            android:textSize="12sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dbdbdb"
            android:orientation="horizontal"/>
    </LinearLayout>
    <!--item内容-->
    <LinearLayout
        android:id="@+id/ll_dialogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="item1"
            android:background="@drawable/item_bg_color"
            android:textColor="#545454"
            android:textSize="16sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dbdbdb"
            android:orientation="horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/item_bg_color"
            android:gravity="center"
            android:text="item2"
            android:textColor="#545454"
            android:textSize="16sp"/>
    </LinearLayout>

    <View
        android:id="@+id/share_divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#dbdbdb"
        android:orientation="horizontal"/>



    <RelativeLayout
        android:id="@+id/bottom_cancel"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/item_bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#545454"
            android:textSize="17sp"/>
    </RelativeLayout>
</LinearLayout>
